{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "lib": [
            "es6"
        ],
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": ".",
        "paths": {
            "@controllers/*": [
                "./src/controllers/*"
            ],
            "@models/*": [
                "./src/models/*"
            ],
        },
        "strict": true,
        "typeRoots": [
            "./../../node_modules/@types",
            ".src/@types"
        ],
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
    }
}